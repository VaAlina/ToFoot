ToFoot 1.3
======
package toS;
import java.util.*;

public class ConvertTometrics {
	public static void main(String[] args){
		Scanner scanner = new Scanner(System.in);
		System.out.println("Выберите операцию, путём ввода её номера. \n"
				+ "1.Фут в сантиметр.\n"
				+ "2.Сантиметр в фут.\n"
				+ "3.Дюйм в сантиметр.\n"
				+ "4.Сантиметр в дюйм.\n");
		int operation = scanner.nextInt();
		switch(operation){
		case 1:
			System.out.println("Введите футы");
			double foot = scanner.nextDouble();
			System.out.print(30.48 * foot+" сантиметров в " + foot+" футах");
			break;
		case 2:
			System.out.println("Введите сантиметры");
			double centimeter = scanner.nextDouble();
			System.out.print(0.032808399 * centimeter +" футов в " + centimeter +" сантиметрах");
			//0.032808399 фута
			break;
		case 3:
			System.out.println("Введите дюймы");
			double inch = scanner.nextDouble();
			System.out.print(2.54 * inch +" сантиметров в " + inch +" дюймах");
			//2.54
			break;
		case 4:
			System.out.println("Введите сантиметры");
			double cmeter = scanner.nextDouble();
			System.out.print(0.393700787 * cmeter +" дюймов в " + cmeter +" сантиметрах");
			//0.393700787 дюйма
			break;
		default:
			System.out.println("Произошла ошибка.");
		} 
		

	}
	
}

ToFoot 1.2//Works only case 1 and default.
======
package toS;
import java.util.*;

public class ConvertTometrics {
	public static void main(String[] args){
		Scanner scanner = new Scanner(System.in);
		System.out.println("Выберите операцию, путём ввода её номера. \n"
				+ "1.Фут в сантиметр.\n"
				+ "2.Сантиметр в фут.\n"
				+ "3.Дюйм в сантиметр.\n"
				+ "4.Сантиметр в дюйм.\n");
		int operation = scanner.nextInt();
		switch(operation){
		case 1:
			System.out.println("Введите футы");
			double foot = scanner.nextDouble();
			System.out.print(30.48 * foot+" сантиметров в " + foot+" футах");
			break;
		case 2:
			System.out.println("Введите сантиметры");
			double centimeter = scanner.nextDouble();
			break;
		case 3:
			System.out.println("Введите сантиметры");
			double inch = scanner.nextDouble();
			break;
		case 4:
			System.out.println("Введите сантиметры");
			double cmeter = scanner.nextDouble();
			break;
		default:
			System.out.println("Произошла ошибка.");
		} 
		

	}
	
}

